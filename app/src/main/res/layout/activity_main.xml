<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#858585"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/Wybierz"
        android:layout_width="200dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071">

        <RadioButton
            android:id="@+id/dodawanie"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="casual"
            android:text="Dodaj do listy"
            android:textAllCaps="true"
            android:textColor="#5e0080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/odhaczanie"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Odhacz z listy"
            android:textAllCaps="true"
            android:textColor="#5e0080"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:fontFamily="casual"
        android:text="Sklep"
        android:textAllCaps="true"
        android:textColor="#b88100"
        android:textSize="34sp"
        android:textStyle=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/pieczywo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Pieczywo"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/Pieczywo"
        android:layout_width="132dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31">

        <com.google.android.material.chip.Chip
            android:id="@+id/bagietka"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:buttonTint="#673AB7"
            android:checkable="true"
            android:text="Bagietka"
            app:checkedIconTint="#FFEB3B"
            app:chipIconTint="#FFEB3B"
            app:chipSurfaceColor="@android:color/holo_orange_light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/croissant"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Croissant"
            app:chipSurfaceColor="@android:color/holo_orange_light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chleb"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Chleb"
            app:chipSurfaceColor="@android:color/holo_orange_light" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/wedliny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Wedliny"
        android:textAllCaps="true"
        android:textColor="#541b01"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/Wedliny"
        android:layout_width="130dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306">

        <com.google.android.material.chip.Chip
            android:id="@+id/szynka"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="sans-serif"
            android:text="Szynka"
            android:textAllCaps="false"
            app:chipSurfaceColor="#541b01" />

        <com.google.android.material.chip.Chip
            android:id="@+id/salami"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Salami"
            app:chipSurfaceColor="#541b01" />

        <com.google.android.material.chip.Chip
            android:id="@+id/kielbasa"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Kiełbasa"
            app:chipSurfaceColor="#541b01" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/warzywa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Warzywa"
        android:textAllCaps="true"
        android:textColor="#42d100"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/Warzywa"
        android:layout_width="130dp"
        android:layout_height="183dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33">

        <com.google.android.material.chip.Chip
            android:id="@+id/ziemniak"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Ziemniak"
            app:checkedIconVisible="true"
            app:chipSurfaceColor="#42d100"
            app:closeIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Burak"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Burak"
            app:chipSurfaceColor="#42d100" />

        <com.google.android.material.chip.Chip
            android:id="@+id/Cebula"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Cebula"
            app:checkedIconVisible="true"
            app:chipSurfaceColor="#42d100" />

        <com.google.android.material.chip.Chip
            android:id="@+id/salata"
            android:layout_width="345px"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Sałata"
            app:chipSurfaceColor="#42d100" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>